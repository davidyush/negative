padding-side($val)
  padding-left $val
  padding-right $val

.main
  margin-top 80px
.create-text
  resize:none
.form-text
  margin-top 10px
  font-size 16px
.nav-tabs,.nav-pills
  margin-bottom 20px
  overflow hidden

.iframe
  width:100%;
  height: 450px;

.create-comment
  height auto
  resize none

textarea.form-control
  height auto

.nav.nav-pills > li
  display table-cell

a:active,a:hover,a:focus,
textarea:active,textarea:hover,textarea:focus
input:focus,button:focus,
.nav-tabs>li.active>a:hover,
.nav-tabs>li.active>a:focus:hover
  outline none
  overflow hidden

#login-dropdown-list input:last-of-type
    border-bottom-left-radius 0
    border-bottom-right-radius 0


.navbar-right
  .form-control
    border-bottom 1px solid #ecede5
    color #ecede5
